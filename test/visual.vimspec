scriptencoding utf-8
Describe visual

    Before all
        let lines = [
        \     '1.asterisk 2.asterisk 3.asterisk'
        \   , '4.Asterisk 5.AsteRisK 6.Asterisk'
        \   , ''
        \   , '7.アスタリスク 8.アスタリスクです 9.アスタリスク?'
        \ ]
        call g:Add_lines(lines)
    End

    Before each
        :1
        normal! 2l
        let @/ = ''
    End

    After all
        :1,$ delete
    End

    Context *
        It search forward with \<\>
            " 'selection' handling
            normal viw*
            Assert Equals(@/, '\V\<asterisk\>')
        End
        It search forward only with \<
            " 'selection' handling
            normal ve5h*
            Assert Equals(@/, '\V\<ast')
        End
        It search forward only with \>
            " 'selection' handling
            normal 2lve*
            Assert Equals(@/, '\Vterisk\>')
        End
    End

    Context multibyte *
        It handle left keyword
            " 'selection' handling
            normal 3jve3h*
            Assert Equals(@/, '\V\<アスタ')
        End
        It handle right keyword
            " 'selection' handling
            normal 3j3lve*
            Assert Equals(@/, '\Vリスク\>')
        End
        It handle left and right keyword
            " 'selection' handling
            normal 3jve*
            Assert Equals(@/, '\V\<アスタリスク\>')
        End
        It is irrelabant with keyword
            " 'selection' handling
            normal 3j1lve2h*
            Assert Equals(@/, '\Vスタリ')
        End
        It handle one character selection
            " 'selection' handling
            normal 3jve5h*
            Assert Equals(@/, '\V\<ア')
        End
    End

End
